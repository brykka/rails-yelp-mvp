<div class="container">
  <h1 class="text-center">The Restaurants!!!</h1>
  <div class="col-lg-6">
    <div class="row">
      <% @restaurants.each do |restaurant| %>
      <ul>
        <li><h4> <%= link_to restaurant.name, restaurant_path(restaurant) %></h4></li>
        <p><%= restaurant.address %></p>
        <p><%= restaurant.phone_number %></p>
        <p><%= restaurant.category %></p>
      </ul>
      <%end%>
    </div>
  </div>
  <%= link_to "Add a new restaurant", new_restaurant_path  %>

</div>


