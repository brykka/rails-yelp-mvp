<div class="col-lg-6">
<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: Restaurant::CATEGORIES %>
  <%= f.button :submit, :class => "btn btn-primary" %>
<% end %>
</div>
<%= link_to "back", restaurants_path %>
